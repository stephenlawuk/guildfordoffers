<h1>Listing posts</h1>

<% @posts.each do |post| %>
  <h1><%= post.offer %></h1>
  <% if post.imgurl.blank? %>
    <%= link_to image_tag("/images/companylogos/nullimg.jpg", :alt => post.company), post %>
  <% else %>
    <%= link_to image_tag(post.imgurl, :alt => post.company), post %>
  <% end %>
  <br/>
  <% if post.created_at.to_date == Date.today %>
    Posted <%=time_ago_in_words(post.created_at)%> ago.
  <% else %>
    Posted <%= display_date(post.created_at) %>.
  <% end %>
  <hr />
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
